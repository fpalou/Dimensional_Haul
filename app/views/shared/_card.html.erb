<div class="container">
  <% @dimensions.each.with_index do |dimension, index| %>
    <% if index % 3 == 0 %>
      <div class="row">
    <% end %>
    <div class="col-md-4 col-lg-4 col-xl-4 mb-4">
      <div class="card-product col-lg col-xl col-3 mt-4">
        <%= cl_image_tag dimension.photo.key %>
        <div class="card-product-infos">
          <h2><%= link_to dimension.title, dimension_path(dimension.id) %></h2>
          <p><%= dimension.description %></p>
          <h3> <%= dimension.category.name %></h3>
        </div>
      </div>
    </div>
    <% if (index + 1) % 3 == 0 || index == @dimensions.size - 1 %>
      </div>
    <% end %>
  <% end %>
</div>
